@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
@if (User.Identity.IsAuthenticated)
{
    <script>
        window.location.href = "/";
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Red Theme */
        :root {
            --primary-red: #DC3545;
            --light-red: #f8d7da;
        }

        body {
            background-color: #f8f9fa;
        }

        .card {
            border-top: 4px solid var(--primary-red);
            width: 400px;
        }

        .nav-tabs .nav-link {
            color: var(--primary-red);
            font-weight: bold;
        }

            .nav-tabs .nav-link.active {
                background-color: var(--primary-red) !important;
                color: white !important;
                border-color: var(--primary-red);
            }

        .btn-primary {
            background-color: var(--primary-red);
            border-color: var(--primary-red);
        }

            .btn-primary:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .form-control:focus {
            border-color: var(--primary-red);
            box-shadow: 0 0 0 0.2rem var(--light-red);
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger fw-bold">Login</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
        }

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="loginTabs">
            <li class="nav-item">
                <a class="nav-link active" id="student-tab" data-bs-toggle="tab" href="#studentLogin">Student Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="admin-tab" data-bs-toggle="tab" href="#adminLogin">Admin Login</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <!-- Student Login Form -->
            <div class="tab-pane fade show active" id="studentLogin">
                <form method="post">
                    <input type="hidden" id="userType" name="UserType" value=0 />
                    <div class="mb-3">
                        <label class="fw-bold">Email:</label>
                        <input type="email" asp-for="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Password:</label>
                        <input type="password" asp-for="Password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
            </div>

            <!-- Admin Login Form -->
            <div class="tab-pane fade" id="adminLogin">
                <form method="post">
                    <input type="hidden" id="userType" name="UserType" value=1 />
                    <div class="mb-3">
                        <label class="fw-bold">Email:</label>
                        <input type="email" asp-for="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Password:</label>
                        <input type="password" asp-for="Password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
